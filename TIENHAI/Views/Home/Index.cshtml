@{
    ViewBag.Title = "Home Page";
}

<!--  HOME SLIDER BLOCK  -->
<div class="slider-wrap">
    <div id="slider_1" class="owl-carousel" data-nav="true" data-dots="true" data-autoplay="true" data-autoplaytimeout="100000" data-bg_effect="true">
        @foreach (var item in new TIENHAI.Models.TIENHAIEntities().tbl_Banner.Where(q=>q.hienthi=="1"))
        {
            <div class="slider_item_container" data-bg_img="../../@item.path" data-bg_color="#111111" data-bg_opacity="0.20">
                <div class="item">
                    <div class="slider-content">
                        <div class="container text-center">
                            <div class="row">
                                <div class="slider-bg">
                                    <div class="col-sm-12 wow fadeInLeft" data-wow-duration="1s">
                                        <h2 class="margin-bottom-12" data-animation-in="slideInDown" data-animation-out="animate-out zoomInDown">
                                            @item.noidung1 <br/><br/>
                                            @item.noidung2
                                        </h2>
                                        <h3 class="margin-bottom-24" data-animation-in="slideInUp" data-animation-out="animate-out zoomInDown">@item.noidung3</h3>
                                        <a href="#" class="btn btn-theme btn-square" data-animation-in="zoomIn" data-animation-out="animate-out fadeOutDown">Liên hệ với chúng tôi</a>

                                    </div>
                                </div> <!-- end .col-sm-12  -->
                            </div> <!-- end .row  -->
                        </div><!-- end .container -->
                    </div> <!--  end .slider-content -->
                </div> <!-- end .item  -->
            </div> <!-- end .slider_item_container  -->
        }
    </div> <!-- end .slider_1  -->
</div> <!-- end .slider-wrap.  -->
<!--  ABOUT -->
<section class="section-content-block">

    <div class="container">
    @foreach (var item in new TIENHAI.Models.TIENHAIEntities().tbl_About.Where(q => q.hienthi == "1"))
    {
        <div class="row">

            <div class="col-md-6 col-sm-12 visible-lg visible-md">
                <img src="../../Content/images/about_feat_bg_2.jpg" alt="feat image"/>
            </div>

            <div class="col-md-6 col-sm-12 col-xs-12 text-left">

                <div class="about-us-intro about-us-overlay theme-custom-box-shadow">

                    <p class="our-experience">
                        @item.noidung1
                        <br/>
                        @item.noidung2 <span>@item.noidung3 </span>
                    </p>

                    @item.noidung4

                    <p class="margin-top-24">
                        <a href="@Url.Action("Index","About")" class="btn btn-theme btn-square wow zoomIn">Tìm hiểu</a>
                    </p>
                </div>
            </div> <!-- end .col-sm-12  -->

        </div>
    }
    </div> <!--  end .container  -->

</section> <!--  end .section-content-block -->
<!--  PRODUCT -->
<section class="section-content-block section-secondary-bg">
    <div class="container">              
        <div class="row section-heading-wrapper">

                <div class="col-md-12 col-sm-12 text-center">
                    <h4 class="heading-alt-style text-capitalize text-dark-color">Sản Phẩm Tiêu Biểu</h4>
                    <span class="heading-separator heading-separator-horizontal"></span>
                    <h2 class="subheading-alt-style">
                        Những sản phẩm được khách hàng chọn lựa hàng đầu với số lượng lớn.
                    </h2>
                </div> <!-- end .col-sm-12  -->

            </div>      
        <div class="row">
            @foreach (var item in new TIENHAI.Models.TIENHAIEntities().tbl_Producttieubieu.Where(q => q.hienthi == "1"))
            {
                <div class="col-md-3 col-sm-6 col-xs-10 col-xs-offset-1 col-sm-offset-0 col-md-offset-0">
                    <a href="#">
                        <article class="service-block-2 text-center">
                            <figure>
                                <img src="../../@item.path" alt="service"/>
                            </figure>
                            <h3>
                                @item.tensp
                                <br/>
                                <span>Xem ngay</span>
                            </h3>
                        </article>
                    </a>
                </div>
            }
            <!--  end .col-lg-4 col-md-4 col-sm-12  -->
        </div>
        <!--  end .row  -->
        <div class="row">
                <div class="col-sm-12 text-center">

                    <a href="#" class="btn btn-theme btn-theme-invert margin-top-24">Xem thêm nhiều sản phẩm</a>

                </div>
            </div>      
    </div> <!--  end .container  -->
</section> <!--  end .section-content-block -->
<!--  START LOGO THUONG HIEU -->

<section class="section-content-block">

    <div class="container">

            <div class="row">
                <div class="col-md-4 col-sm-12 col-xs-12">
                    <div class="section-heading-wrapper inline-heading-style">

                        <h2 class="after-line">Thương hiệu</h2>
                        <h4>
                            Chúng tôi làm việc với nhiều thương hiệu khác nhau
                        </h4>

                    </div>
                </div>
                <div class="col-md-8 col-sm-12 col-xs-12">
                    <div class="logo-layout-1 logo-items owl-carousel" data-nav="false" data-dots="false" data-items="4">
                        @foreach (var item in new TIENHAI.Models.TIENHAIEntities().tbl_Logo.Where(q => q.hienthi == "1"))
                        {
                            <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                <div class="client-logo">
                                    <img src="../../@item.path" alt=""/>
                                </div>
                            </div>
                        }
                    </div><!-- end .logo-items  -->   
                </div>
            </div>
            <!-- end row  -->
    </div> <!-- end .container  -->

</section> <!--  end .section-client-logo -->
<!-- PROCESS SECTION 02-->


<!--  SECTION APPOINTMENT   06-->

<section class="section-content-block section-secondary-bg">

    <div class="container">

        <div class="row wow fadeInUp">

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

                <div class="appointment-form-wrapper light-layout  margin-bottom-24 clearfix theme-custom-no-box-shadow">

                    <div class="col-md-4 col-sm-12">
                        <div class="appointment-form-heading text-left">
                            <h2 class="form-title text-capitalize margin-top-24">
                                Yêu cầu hỗ trợ
                            </h2>

                            <p>
                                Hãy gửi thông tin để chúng tôi có thể trực tiếp liên hệ với bạn.
                            </p>

                        </div>
                    </div>

                    <div class="col-md-8 col-sm-12">

                        <form class="appoinment-form margin-top-42">
                            <div class="form-group col-md-4">
                                <input id="your_name" class="form-control" placeholder="Name" type="text" required="" data-msg="This field is required.">
                            </div>
                            <div class="form-group col-md-4">
                                <input id="your_email" class="form-control" placeholder="Email" type="email" required="" data-msg="This field is required.">
                            </div>
                            <div class="form-group col-md-4">
                                <input id="your_phone" class="form-control" placeholder="Phone" type="text" required="" data-msg="This field is required.">
                            </div>

                            <div class="form-group col-md-12 col-sm-12 col-xs-12">
                                <textarea id="textarea_message" class="form-control" rows="3" placeholder="Your Message..." required="" data-msg="This field is required."></textarea>
                            </div>

                            <div class="form-group col-md-12 col-sm-12 col-xs-12 text-left">
                                <button id="btn_submit" class="btn btn-lg btn-theme btn-square btn-theme-invert" type="submit">Gửi</button>
                            </div>

                        </form>

                    </div>

                </div> <!-- end .appointment-form-wrapper  -->

            </div> <!--  end .col-lg-6 -->

        </div> <!--  end .row  -->

        <div class="row counter-inline-container wow zoomIn">

            <div class="col-md-3 col-sm-6 col-xs-6">

                <div class="counter-block-2 counter-border">

                    <i class="icon fa fa-users"></i>
                    <div class="count-info">
                        <span class="counter">05 </span>
                        <span class="counter-postfix">+</span>
                        <p class="text-capitalize">Hoạt động</p>
                    </div>

                </div>

            </div> <!--  end .col-lg-3 col-md-3 col-sm-6 col-xs-12 -->

            <div class="col-md-3 col-sm-6 col-xs-6">

                <div class="counter-block-2 counter-border">

                    <i class="icon fa fa-smile-o"></i>

                    <div class="count-info">
                        <span class="counter">200</span>
                        <span class="counter-postfix">+</span>
                        <p class="text-capitalize">Khách hàng</p>
                    </div>

                </div>

            </div> <!--  end .col-lg-3 col-md-3 col-sm-6 col-xs-12 -->

            <div class="col-md-3 col-sm-6 col-xs-6">

                <div class="counter-block-2 counter-border">

                    <i class="icon fa fa-forumbee"></i>
                    <div class="count-info">
                        <span class="counter">100</span>
                        <span class="counter-postfix">%</span>
                        <p class="text-capitalize">Giao hàng tận nơi</p>
                    </div>

                </div>

            </div> <!--  end .col-lg-3 col-md-3 col-sm-6 col-xs-12 -->

            <div class="col-md-3 col-sm-6 col-xs-6">

                <div class="counter-block-2 counter-border">

                    <i class="icon fa fa-wrench"></i>
                    <div class="count-info">
                        <span class="counter">100</span>
                        <span class="counter-postfix">%</span>
                        <p class="text-capitalize">Xử lý các vấn đề kịp thời</p>
                    </div>

                </div>

            </div> <!--  end .col-lg-3 col-md-3 col-sm-6 col-xs-12 -->

        </div>  <!--  end .row  -->

    </div> <!--  end .container -->

</section>  <!--  end .appointment-section  -->

